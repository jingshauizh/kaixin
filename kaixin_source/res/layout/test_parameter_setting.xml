<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/LinearLayout1" android:background="@drawable/listview_item_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:id="@id/tableLayout1" android:padding="15.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:stretchColumns="1">
        <TableRow android:id="@id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@id/tv_lon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="lon" />
            <EditText android:id="@id/ev_lon" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="numberDecimal" />
        </TableRow>
        <TableRow android:id="@id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@id/tv_lat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="lat" />
            <EditText android:id="@id/ev_lat" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="numberDecimal" />
        </TableRow>
        <TableRow android:id="@id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_gravity="center_vertical" android:id="@id/tv_host" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="host" />
            <Spinner android:id="@id/sp_host" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
</RelativeLayout>